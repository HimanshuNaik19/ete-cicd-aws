{
  "name": "aws-cicd-demo-app",
  "version": "1.0.0",
  "description": "Sample Node.js application for AWS CI/CD pipeline demonstration",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "npx jest --coverage --forceExit --detectOpenHandles",
    "test:watch": "npx jest --watch"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testTimeout": 10000
  },
  "keywords": [
    "aws",
    "cicd",
    "codepipeline",
    "codebuild",
    "codedeploy"
  ],
  "author": "DevOps Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}